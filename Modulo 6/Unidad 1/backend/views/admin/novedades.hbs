<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }}!!!  <a href="/admin/login/logout" class="btn btn-danger"> Cerrar Sesion <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus-square"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead class="table-warning">
                    <tr>
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-2">Titulo</th>
                        <th scope="col" class="col-7">Descripcion</th>
                        <th scope="col" class="col-2 text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{descripcion}}</td>
                        <td class="text-center">
                            <a href="#" title="Editar" class="btn btn-sm btn-primary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="#" title="Eliminar" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>