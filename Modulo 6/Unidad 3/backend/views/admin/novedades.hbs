<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col">
            <p class="boton_cerrar_sesion">Hola {{ usuario }}!!!  <a href="/admin/login/logout" class="btn btn-danger"> Cerrar Sesion <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-8 boton_nuevo">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus-square"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-primary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>