<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <div class="form-group mb-2">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                </div>                
                <div class="form-group mb-2">
                    <input type="text" value="{{novedad.titulo}}" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group mb-2">
                    <textarea type="text" value="{{novedad.descripcion}}" class="form-control" placeholder="Descripcion" name="descripcion"></textarea>
                </div>
                <div class="form-group mb-2">
                    <input type="file" value="{{novedad.imagen}}" name="imagen">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Modificar</button>
            </form>
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>