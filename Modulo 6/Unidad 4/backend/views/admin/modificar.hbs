<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                </div>                
                <div class="form-group mb-2">
                    <input type="text" value="{{novedad.titulo}}" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group mb-2">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion">{{novedad.descripcion}}</textarea>
                </div>
                <div class="form-group mb-2">
                    <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Modificar</button>
            </form>
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>